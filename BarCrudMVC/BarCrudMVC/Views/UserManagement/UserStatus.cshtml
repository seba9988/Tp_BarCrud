@model BarCrudMVC.Models.UserStatusViewModel

<section class="container">
	<h1 class="display-5 fw-bold text-center">Perfil</h1>

	<hr/>
	@if(Model != null)
	{
		<article class="card border-secondary bg-light" style="width: 30rem; display:inline-flex">
			<div class="card-body bg-light ">
				<h2 class="card-title">Datos Usuario</h2>
				<p style="inline-block">
					<span class=" fw-bold text-secondary card-text">User Name:</span>
					<span class="card-text"> @Model.UserName </span>
				</p>
				<p style="inline-block">
					<span class=" fw-bold text-secondary card-text">Nombre:</span>
					<span class="card-text"> @Model.Nombre </span>
				</p>
				<p style="inline-block">
					<span class=" fw-bold text-secondary card-text">Apellido:</span>
					<span class="card-text"> @Model.Apellido </span>
				</p>
				<p style="inline-block">
					<span class=" fw-bold text-secondary card-text">DNI:</span>
					<span class="card-text"> @Model.Dni </span>
				</p>
				<hr>
				<h2>Roles:</h2>
				<br>
				@if (Model.roles != null && Model.roles.Count > 0)
				{
					
					@foreach (var role in Model.roles)
					{
						<span style="margin-left:10px;" class="alert alert-secondary card-text">
							@role.Value
						</span>
						<span> </span>
					}
					<br/>
				}
				<br>
			</div>			
		</article>
	}
</section>